@model EmployeeProfileViewModel
@{
    ViewData["Title"] = "Employee";

    var user = Model;

    string? userImageUrl = user.ProfileImageUrl;
    if (string.IsNullOrEmpty(userImageUrl))
    {
        userImageUrl = "https://s3.eu-central-1.amazonaws.com/bootstrapbaymisc/blog/24_days_bootstrap/fox.jpg";
    }

    string? fileUrl = user.AttachedResume?.ResumeUrl;
    bool isFileUploaded = string.IsNullOrEmpty(fileUrl) == false;
}

<div class="container-xl px-4 mt-4">
    <!-- Account page navigation-->
    @await Html.PartialAsync("./ProfileTabs/_EmployeeProfileTabs", Model)

    <div class="alert alert-dismissible alert-warning">
        <i class="bi bi-exclamation-triangle" style="font-size: 1.25rem;"></i>
        <small>Complete your profile & apply with just one click!</small>
    </div>

    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-xl-6">
                <!-- Profile picture card-->
                <div class="card mb-4 mb-xl-0">
                    <div class="card-header">User Details</div>
                    <div class="card-body">

                        @await Html.PartialAsync("./Profile/_UserProfileImage", Model)

                        <div class="row gx-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="@user.Name" class="small mb-1" for="inputFirstName">Name</label>
                                <input asp-for="@user.Name" class="form-control" id="inputFirstName" type="text" placeholder="Enter your name" value=@user.Name>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="@user.Surname" class="small mb-1" for="inputLastName">Surname</label>
                                <input asp-for="@user.Surname" class="form-control" id="inputLastName" type="text" placeholder="Enter your surname" value=@user.Surname>
                            </div>
                        </div>
                        <div class="row gx-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="@user.Country" class="small mb-1" for="inputLocation">Country</label>
                                <input asp-for="@user.Country" class="form-control" id="inputLocation" type="text" placeholder="Enter your country" value=@user.Country>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="@user.City" class="small mb-1" for="inputLocation">City</label>
                                <input asp-for="@user.City" class="form-control" id="inputLocation" type="text" placeholder="Enter your city" value=@user.City>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="col-md-12">
                                <label asp-for="@user.Description" class="small mb-1">Introduce yourself</label>
                                <textarea asp-for="@user.Description" class="form-control" placeholder="Introduce yourself">@user.Description</textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-6">
                <!-- Account details card-->
                <div class="card mb-4" id="uploadResumeCard">
                    <div class="card-header">Account Details</div>
                    <div class="card-body">
                        @{
                            ViewData["IsPostFormOnChange"] = true;
                        }
                        @await Html.PartialAsync("./Fields/_UploadCvField", Model)

                        <div class="mb-3">
                            <label asp-for="@user.YearsOfExperience" class="small mb-1" for="Update.YearsOfExperience">Years of experience</label>
                            <div class="btn-group d-flex" data-toggle="buttons">
                                <input type="radio" value="0-1" class="btn-check" name="Update.YearsOfExperience" id="option1" autocomplete="off" checked=@(@user.YearsOfExperience == "0-1" ? "checked" : null) />
                                <label class="btn btn-secondary p-3" for="option1" style="font-size: 1.2rem;">0-1</label>

                                <input type="radio" value="1-2" class="btn-check" name="Update.YearsOfExperience" id="option2" autocomplete="off" checked=@(@user.YearsOfExperience == "1-2" ? "checked" : null) />
                                <label class="btn btn-secondary p-3" for="option2" style="font-size: 1.2rem;">1-2</label>

                                <input type="radio" value="2-4" class="btn-check" name="Update.YearsOfExperience" id="option3" autocomplete="off" checked=@(@user.YearsOfExperience == "2-4" ? "checked" : null) />
                                <label class="btn btn-secondary p-3" for="option3" style="font-size: 1.2rem;">2-4</label>

                                <input type="radio" value="4-8" class="btn-check" name="Update.YearsOfExperience" id="option4" autocomplete="off" checked=@(@user.YearsOfExperience == "4-8" ? "checked" : null) />
                                <label class="btn btn-secondary p-3" for="option4" style="font-size: 1.2rem;">4-8</label>

                                <input type="radio" value="8+" class="btn-check" name="Update.YearsOfExperience" id="option5" autocomplete="off" checked=@(@user.YearsOfExperience == "8+" ? "checked" : null) />
                                <label class="btn btn-secondary p-3" for="option5" style="font-size: 1.2rem;">8+</label>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="@user.LinkedInUrl" class="small mb-1" for="Update.LinkedInUrl">Social links</label>
                            <div class="d-flex flex-row align-items-center">
                                @if (string.IsNullOrEmpty(@user.LinkedInUrl))
                                {
                                    <i class="bi bi-linkedin mx-2" style="font-size: 1.75rem;"></i>
                                }
                                else
                                {
                                    <a target = "_blank" rel = "noopener noreferrer" href = @user.LinkedInUrl>
                                        <i class="bi bi-linkedin mx-2 text-info" style="font-size: 1.75rem;"></i>
                                    </a>
                                }
                                <input asp-for="@user.LinkedInUrl" class="form-control" id="inputFirstName" type="text" placeholder="LinkedIn" value=@user.LinkedInUrl>
                            </div>
                        </div>
                        <!-- Save changes button-->
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    // TODO: Move to shared components
    var radioButtons = document.querySelectorAll('input[type="radio"][name="Update.YearsOfExperience"]');
    var labels = document.querySelectorAll('.btn-group label');

    for (var i = 0; i < radioButtons.length; i++) {
        radioButtons[i].addEventListener('change', function () {
            for (var j = 0; j < labels.length; j++) {
                labels[j].classList.remove('btn-primary');
                labels[j].classList.add('btn-secondary');
            }
            var label = this.nextElementSibling;
            label.classList.remove('btn-secondary');
            label.classList.add('btn-primary');
        });
        if (radioButtons[i].checked)
        {
            var label = labels[i];
            label.classList.remove('btn-secondary');
            label.classList.add('btn-primary');
        }
    }
</script>