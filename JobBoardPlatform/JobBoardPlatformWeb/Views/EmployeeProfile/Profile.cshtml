@model EmployeeProfileViewModel
@{
    ViewData["Title"] = "Employee";

    var user = ViewData.Model;

    string? userImageUrl = user.PhotoUrl;
    if (string.IsNullOrEmpty(userImageUrl))
    {
        userImageUrl = "https://s3.eu-central-1.amazonaws.com/bootstrapbaymisc/blog/24_days_bootstrap/fox.jpg";
    }
}

<div class="container-xl px-4 mt-4">
    <!-- Account page navigation-->
    <nav class="nav">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Profile" ? "active ms-0" : "")"
                   asp-controller="EmployeeProfile" asp-action="Profile">Profile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Security" ? "active ms-0" : "")"
                   asp-controller="EmployeeProfile" asp-action="Security">Security</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Preferences" ? "active ms-0" : "")" 
                   asp-controller="EmployeeProfile" asp-action="Preferences">Preferences</a>
            </li>
        </ul>
    </nav>
    <hr class="mt-0 mb-4">
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-xl-4">
                <!-- Profile picture card-->
                <div class="card mb-4 mb-xl-0">
                    <div class="card-header">Profile Picture</div>
                    <div class="card-body text-center">
                        <!-- Profile picture image-->
                        <img class="img-account-profile rounded-circle mb-2" width="256" height="256" src=@userImageUrl alt="">
                        <!-- Profile picture help block-->
                        <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                        <!-- Profile picture upload button-->
                        <input asp-for="Avatar" class="form-control" id="avatar-input" type="file" name="avatar" style="display:none" />
                        <button class="btn btn-primary" id="avatar-button" type="button">Upload new image</button>
                        <input type="submit" value="Upload" style="display:none" />

                        <script>
                            // Get the file input element and the button element
                            var input = document.getElementById("avatar-input");
                            var button = document.getElementById("avatar-button");

                            // Add a click event listener to the button
                            button.addEventListener("click", function () {
                                // Simulate a click on the file input element
                                input.click();
                            });

                            // Add a change event listener to the file input element
                            input.addEventListener("change", function () {
                                // Submit the form when a file is selected
                                this.form.submit();
                            });
                        </script>
                    </div>
                </div>
            </div>
            <div class="col-xl-8">
                <!-- Account details card-->
                <div class="card mb-4">
                    <div class="card-header">Account Details</div>
                    <div class="card-body">
                            <!-- Form Row-->
                            <div class="row gx-3 mb-3">
                                <!-- Form Group (first name)-->
                                <div class="col-md-6">
                                    <label asp-for="Name" class="small mb-1" for="inputFirstName">First name</label>
                                    <input asp-for="Name" class="form-control" id="inputFirstName" type="text" placeholder="Enter your first name" value=@user.Name>
                                </div>
                                <!-- Form Group (last name)-->
                                <div class="col-md-6">
                                    <label asp-for="Surname" class="small mb-1" for="inputLastName">Last name</label>
                                    <input asp-for="Surname" class="form-control" id="inputLastName" type="text" placeholder="Enter your last name" value=@user.Surname>
                                </div>
                            </div>
                            <!-- Form Row        -->
                            <div class="row gx-3 mb-3">
                                <!-- Form Group (location)-->
                                <div class="col-md-6">
                                    <label asp-for="Country" class="small mb-1" for="inputLocation">Country</label>
                                    <input asp-for="Country" class="form-control" id="inputLocation" type="text" placeholder="Enter your country" value=@user.Country>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="City" class="small mb-1" for="inputLocation">City</label>
                                    <input asp-for="City" class="form-control" id="inputLocation" type="text" placeholder="Enter your city" value=@user.City>
                                </div>
                            </div>
                            <!-- Form Group (Description)-->
                            <div class="mb-3">
                                <label asp-for="Description" class="small mb-1" for="inputEmailAddress">Email address</label>
                                <input asp-for="Description" class="form-control" id="inputEmailAddress" placeholder="Shortly introduce yourself" value=@user.Description>
                            </div>
                            <!-- Form Row-->
                            <div class="mb-3">
                                <label asp-for="ResumeUrl" class="small mb-1" for="inputLocation">Upload CV</label>
                                <input class="form-control form-control-lg" id="formFileLg" type="file">
                            </div>
                            <!-- Save changes button-->
                            <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>