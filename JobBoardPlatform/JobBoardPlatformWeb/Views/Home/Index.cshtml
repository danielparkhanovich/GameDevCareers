@using JobBoardPlatform.PL.ViewModels.JobOfferViewModels.Users;
@model JobOffersDisplayViewModel
@{
    ViewData["Title"] = "Home Page";

    var offers = Model.JobOffers;
}

<div class="container px-5">
    <div class="d-flex flex-column px-5" style="height: 100vh;">
        <div class="mb-3">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="form-floating mb-3">
                        <input class="form-control rounded-pill" id="floatingInput" placeholder="Skill Feature Field">
                        <label for="floatingInput">Search</label>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="form-floating mb-3" id="floatingSelect">
                        <select class="form-select rounded-pill" id="floatingSelect" aria-label="Floating label select example">
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                        <label for="floatingSelect">Works with selects</label>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center align-content-center">
                <button class="text-center mx-1 border-0 bg-transparent">
                    <div class="d-flex justify-content-center align-items-center border border-dark rounded-circle" style="width: 2.5rem; height: 2.5rem;">
                        <i class="bi bi-display" style="font-size: 1.5rem;"></i>
                    </div>
                    All
                </button>
                <button class="text-center mx-1 border-0 bg-transparent">
                    <div class="d-flex justify-content-center align-items-center border border-dark rounded-circle" style="width: 2.5rem; height: 2.5rem;">
                        <i class="bi bi-display" style="font-size: 1.5rem;"></i>
                    </div>
                    All
                </button>
                <button class="text-center mx-1 border-0 bg-transparent">
                    <div class="d-flex justify-content-center align-items-center border border-dark rounded-circle" style="width: 2.5rem; height: 2.5rem;">
                        <i class="bi bi-display" style="font-size: 1.5rem;"></i>
                    </div>
                    All
                </button>
            </div>
        </div>

        <div class="d-flex flex-row px-4">
            <ul class="nav nav-tabs flex-grow-1 border-0">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#">Offers</a>
                </li>
                <li class="nav-item px-5">
                    <a class="nav-link" href="#">Commissions</a>
                </li>
            </ul>
            <div class="form-check form-switch align-self-center mx-4">
                <label class="form-check-label" for="remoteSwitchBox">Remote</label>
                <input class="form-check-input" type="checkbox" id="remoteSwitchBox" style="transform: scale(1.25);">
            </div>
            <div class="form-check form-switch align-self-center">
                <label class="form-check-label" for="withSalarySwitchBox">With salary</label>
                <input class="form-check-input" type="checkbox" id="withSalarySwitchBox" style="transform: scale(1.25);">
            </div>
        </div>

        <hr class="mt-0 mb-2">
        <div class="flex-grow-1 bg-dark bg-opacity-10">
            @foreach(var offer in offers)
            {
                <div class="mb-2 card">
                    @await Html.PartialAsync("./JobOffers/_JobOffer", offer)
                </div>
            }
        </div>
    </div>
</div>
