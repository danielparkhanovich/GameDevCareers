@using JobBoardPlatform.PL.ViewModels.OfferViewModels.Company;

@model CompanyOffersViewModel
@{
    var offerCards = Model.JobOffers;

    ViewData["IsFullCardDisplay"] = true;
}

<div class="container-xl px-4 mt-4">

    <!-- Account page navigation-->
    @await Html.PartialAsync("./ProfileTabs/_CompanyProfileTabs")

    <div class="card mb-5">
        <div class="card-header">Account type</div>
        <div class="card-body d-flex flex-row justify-content-between align-items-center">
            <h5 class="mb-0">
                INDIE
            </h5>
            <a asp-controller="JobOffers" asp-action="AddOffer" class="btn btn-primary">
                Change account type
            </a>
        </div>
    </div>

    <div class="card flex-grow-1">
        <div class="card-header d-flex flex-row justify-content-between align-items-center">
            <div>
                Company job ads
            </div>
            <a asp-controller="JobOffers" asp-action="AddOffer" class="btn btn-primary">
                New Ad
            </a>
        </div>
        <div class="bg-dark bg-opacity-10">
            @if (offerCards != null && offerCards.Count > 0)
            {
                @foreach (var offerCard in offerCards)
                {
                @await Html.PartialAsync("./JobOffers/_JobOfferCompanyView", offerCard);
                }
            }
        </div>
    </div>
</div>