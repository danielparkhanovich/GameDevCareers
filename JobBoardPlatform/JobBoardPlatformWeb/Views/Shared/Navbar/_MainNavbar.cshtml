@{
    string currentController = ViewContext.RouteData.Values["Controller"].ToString();
    string employmentType = ViewContext.HttpContext.Request.Path.ToString().ToLower();
    bool isEmploymentType = employmentType == "/";
    bool isCommissionType = employmentType == "/commissions";
}

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-secondary bg-secondary border-bottom border-opacity-10 border-dark box-shadow p-0">
    <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
            <strong class="h4 mx-2">GameDev.Hunt</strong>
        </a>
        <small class="text-muted" style="font-weight:400;">Find your next job in game development</small>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
            <ul class="navbar-nav nav-pills align-items-center">
                <a class="nav-link @(isEmploymentType ? "text-primary" : "text-dark muted")" asp-controller="Home" asp-action="Index">Employment</a>
                <a class="nav-link @(isCommissionType ? "text-primary" : "text-dark muted")" href="/commissions">Commissions</a>
                <li class="nav-item border border-primary rounded-pill mx-2 my-2 px-2">
                    <a class="nav-link text-dark" asp-controller="CompanyRegister" asp-action="RegisterPromotion">Post a job</a>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    @await Html.PartialAsync("./Navbar/_UserPartialNav");
                }
                else
                {
                    @await Html.PartialAsync("./Navbar/_GuestPartialNav");
                }
            </ul>
        </div>
    </div>
</nav>