@using JobBoardPlatform.PL.Controllers.Login;
@{
    string authorizationButtonsText = (ViewData["AuthorizationButtonsText"] as string)!;
}
<div class="col-md-12 text-center mt-3">
    <div>
        <div class="d-flex flex-row justify-content-center">
            <a href="@Url.Action(EmployeeLoginController.LoginWithGoogleAction)"
               class="btn btn-secondary btn-floating me-4 w-50">
                <div class="d-flex align-items-center justify-content-center">
                    <i class="bi bi-google fs-5 mx-2" 
                    style="background: conic-gradient(from -45deg, #ea4335 110deg, #4285f4 90deg 180deg, #34a853 180deg 270deg, #fbbc05 270deg) 73% 55%/150% 150% no-repeat;
                            -webkit-background-clip: text;
                            background-clip: text;
                            color: transparent;
                            -webkit-text-fill-color: transparent;"></i>
                    <div>@authorizationButtonsText Google</div>
                </div>
            </a>
            <a href="@Url.Action(EmployeeLoginController.LoginWithGitHubAction)"
               class="btn btn-secondary btn-floating w-50">
                <div class="d-flex align-items-center justify-content-center">
                    <i class="bi bi-github fs-5 mx-2"></i>
                    <div>@authorizationButtonsText GitHub</div>
                </div>
            </a>
        </div>
        <div class="d-flex flex-row justify-content-center mt-3">
            <a href="@Url.Action(EmployeeLoginController.LoginWithLinkedInAction)"
               class="btn btn-secondary btn-floating me-4 w-50 disabled">
                <div class="d-flex align-items-center justify-content-center">
                    <i class="bi bi-linkedin fs-5 mx-2 text-info"></i>
                    <div>@authorizationButtonsText LinkedIn</div>
                </div>
            </a>
            <a href="@Url.Action(EmployeeLoginController.LoginWithFacebookAction)"
               class="btn btn-secondary btn-floating w-50">
                <div class="d-flex align-items-center justify-content-center">
                    <i class="bi bi-facebook fs-5 mx-2 text-primary"></i>
                    <div>@authorizationButtonsText Facebook</div>
                </div>
            </a>
        </div>
    </div>
    <div class="d-flex flex-row justify-content-between align-content-center mt-2">
        <hr style="width:47%;"/>
        <p class="text-muted">Or</p>
        <hr style="width:47%;" />
    </div>
</div>