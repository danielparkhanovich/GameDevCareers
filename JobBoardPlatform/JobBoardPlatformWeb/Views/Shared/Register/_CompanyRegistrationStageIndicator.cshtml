@model int
@{
    int stage = Model;
}

<div class="d-flex flex-row justify-content-between align-items-center pt-5 pb-5" style="padding-left:100px; padding-right:100px;">
    <div class="d-flex flex-row align-items-center">
        <div class="d-flex justify-content-center align-items-center @(stage == 1 ? "bg-primary" : "bg-dark bg-opacity-25") me-2 mb-0 rounded-circle h4"
             style="width:40px; height:40px;">
            <span class="text-light">1</span>
        </div>
        <span><strong>Create</strong></span>
    </div>
    <hr style="width:30%;" />
    <div class="d-flex flex-row align-items-center text-muted">
        <div class="d-flex justify-content-center align-items-center @(stage == 2 ? "bg-primary" : "bg-dark bg-opacity-25") me-2 mb-0 rounded-circle h4"
             style="width:40px; height:40px;">
            <span class="text-light">2</span>
        </div>
        <span><strong>Verify</strong></span>
    </div>
    <hr style="width:30%;" />
    <div class="d-flex flex-row align-items-center text-muted">
        <div class="d-flex justify-content-center align-items-center @(stage == 3 ? "bg-primary" : "bg-dark bg-opacity-25") me-2 mb-0 rounded-circle h4"
             style="width:40px; height:40px;">
            <span class="text-light"><i class="bi bi-check-lg"></i></span>
        </div>
        <span><strong>Publish</strong></span>
    </div>
</div>
