@model CompanyProfileViewModel
@{
    ViewData["Title"] = "Company";

    var user = ViewData.Model;

    string? userImageUrl = user.ProfileImageUrl;
    if (string.IsNullOrEmpty(userImageUrl))
    {
        userImageUrl = "https://s3.eu-central-1.amazonaws.com/bootstrapbaymisc/blog/24_days_bootstrap/fox.jpg";
    }
}

<div class="container-xl px-4 mt-4">
    <!-- Account page navigation-->
    <nav class="nav nav-borders">
        <a class="nav-link text-decoration-none @(ViewContext.RouteData.Values["Action"].ToString() == "Profile/Employee" ? "active ms-0" : "")">@Html.ActionLink("Home", "Index", "Home")</a>
        <a class="nav-link text-decoration-none @(ViewContext.RouteData.Values["Action"].ToString() == "About" ? "active ms-0" : "")">@Html.ActionLink("About", "About", "Home")</a>
        <a class="nav-link text-decoration-none @(ViewContext.RouteData.Values["Action"].ToString() == "Contact" ? "active ms-0" : "")">@Html.ActionLink("Contact", "Contact", "Home")</a>
    </nav>
    <hr class="mt-0 mb-4">
    <div class="row">
        <div class="col-xl-4">
            <!-- Profile picture card-->
            <div class="card mb-4 mb-xl-0">
                <div class="card-header">Profile Picture</div>
                <div class="card-body text-center">
                    <!-- Profile picture image-->
                    <img class="img-account-profile rounded-circle mb-2" width="256" height="256" src=@userImageUrl alt="">
                    <!-- Profile picture help block-->
                    <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                    <!-- Profile picture upload button-->
                    <button class="btn btn-primary" type="button">Upload new image</button>
                </div>
            </div>
        </div>
        <div class="col-xl-8">
            <!-- Account details card-->
            <div class="card mb-4">
                <div class="card-header">Account Details</div>
                <div class="card-body">
                    <form method="post">
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (first name)-->
                            <div class="col-md-6">
                                <label asp-for="CompanyName" class="small mb-1" for="inputFirstName">First name</label>
                                <input asp-for="CompanyName" class="form-control" id="inputFirstName" type="text" placeholder="Enter your first name" value=@user.CompanyName>
                            </div>
                        </div>
                        <!-- Form Row        -->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (location)-->
                            <div class="col-md-6">
                                <label asp-for="City" class="small mb-1" for="inputLocation">Location</label>
                                <input asp-for="City" class="form-control" id="inputLocation" type="text" placeholder="Enter your location" value=@user.Country,@user.City>
                            </div>
                        </div>
                        <!-- Save changes button-->
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>