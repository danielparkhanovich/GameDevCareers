@using JobBoardPlatform.PL.Controllers.Login;
@model UserLoginViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="d-flex flex-column aligns-items-center justify-content-center min-vh-100 mx-auto" style="max-width: 762px; margin-top: -56px;">
    <h1 class="text-center">Get started for free</h1>
    <!-- Render shared login form and pass controller name -->
    @{
        ViewData["LoginControllerName"] = "EmployeeLogin";
        ViewData["RegisterControllerName"] = "EmployeeRegister";
    }
    <div class="col-md-12 text-center mt-3 px-3">
        <div>
            <div class="d-flex flex-row justify-content-center">
                <a href="@Url.Action(EmployeeLoginController.LoginWithGoogleAction)"
                   class="btn btn-secondary btn-floating mx-2 w-50">
                    <div class="d-flex align-items-center justify-content-center">
                        <i class="bi bi-google fs-5 mx-2" style="
                              background: conic-gradient(from -45deg, #ea4335 110deg, #4285f4 90deg 180deg, #34a853 180deg 270deg, #fbbc05 270deg) 73% 55%/150% 150% no-repeat;
                              -webkit-background-clip: text;
                              background-clip: text;
                              color: transparent;
                              -webkit-text-fill-color: transparent;"></i>
                        <div>Sign in with Google</div>
                    </div>
                </a>
                <a href="@Url.Action(EmployeeLoginController.LoginWithGitHubAction)"
                    class="btn btn-secondary btn-floating mx-2 w-50">
                    <div class="d-flex align-items-center justify-content-center">
                        <i class="bi bi-github fs-5 mx-2"></i>
                        <div>Sign in with Github</div>
                    </div>
                </a>
            </div>
            <div class="d-flex flex-row justify-content-center">
                <a href="@Url.Action(EmployeeLoginController.LoginWithLinkedInAction)"
                    class="btn btn-secondary btn-floating mx-2 mt-3 w-50">
                    <div class="d-flex align-items-center justify-content-center">
                        <i class="bi bi-linkedin fs-5 mx-2 text-info"></i>
                        <div>Sign in with LinkedIn</div>
                    </div>
                </a>
                <a href="@Url.Action(EmployeeLoginController.LoginWithFacebookAction)"
                    class="btn btn-secondary btn-floating mx-2 mt-3 w-50">
                    <div class="d-flex align-items-center justify-content-center">
                        <i class="bi bi-facebook fs-5 mx-2 text-primary"></i>
                        <div>Sign in with Facebook</div>
                    </div>
                </a>
            </div>
        </div>
        <hr class="my-12 mt-4"/>
        <p>or sign in with:</p>
    </div>
    @await Html.PartialAsync("./Login/_Login", Model)
</div>
