@using JobBoardPlatform.PL.ViewModels.OfferViewModels.Users;
@model OfferContentViewModel
@{
    var offerDescription = Model.Display;
    bool isFullyRemote = offerDescription.WorkLocationType == WorkLocationTypeEnum.FullyRemote.ToString();
    bool isTechKeywords = offerDescription.TechKeywords != null && offerDescription.TechKeywords.Count() > 0;
    bool isExternalForm = offerDescription.ContactForm == ContactTypeEnum.ExternalForm.ToString();

    var application = Model.Update;
}

<div class="container px-5 py-5">
    <div class="d-flex flex-row bg-primary bg-opacity-75 rounded px-5 py-4 mb-4">
        <div class="d-flex flex-column mt-4">
            <div class="bg-white bg-opacity-10 rounded p-2">
                <div class="bg-white bg-opacity-25 rounded p-2">
                    <div class="bg-white rounded p-3">
                        <img src=@offerDescription.CompanyImageUrl width="75" height="75" class="border border-secondary rounded">
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex flex-column justify-content-center mx-4">
            <div class="d-flex flex-row">
                <h2 class="text-light mt-4">@offerDescription.JobTitle</h2>
                @if (isTechKeywords)
                {
                    @foreach (var technology in offerDescription.TechKeywords!)
                    {
                        <div class="d-flex flex-column justify-content-end text-center">
                            <p class="text-light text-opacity-50 small rounded-pill border border-light border-opacity-25 px-3 ms-3">@technology.ToLower()</p>
                        </div>
                    }
                }
            </div>
            <div class="d-flex flex-row mb-2">
                <i class="bi bi-buildings text-light"></i>
                <div class="text-light mx-2">@offerDescription.CompanyName</div>
            </div>
            <div class="d-flex flex-row">
                <i class="bi bi-geo-alt text-light"></i>
                <div class="text-light mx-2">@offerDescription.FullAddress</div>
                <div class="text-center rounded @(isFullyRemote ? "bg-light" : "bg-dark bg-opacity-50") px-3 mx-3">
                    <p class="small mb-0 @(isFullyRemote ? "text-primary" : "text-light") ">@offerDescription.WorkLocationType</p>
                </div>
            </div>
            <div class="d-flex flex-row text-light mt-3 mb-1">
                <h5 class="text-light">@offerDescription.SalaryDetails[0]</h5>
                <div class="mx-2">@offerDescription.EmploymentDetails[0]</div>
            </div>
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header bg-white h5">
            Description
        </div>
        <div class="card-body">
            @Html.Raw(System.Web.HttpUtility.HtmlDecode(@offerDescription.JobDescription))
        </div>
    </div>
    @if (!isExternalForm)
    {
        <div class="card">
            <div class="card-header bg-white h5">
                Apply for this job
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="row gx-3 mb-3">
                        <div class="col-md-12">
                            <label class="small mb-1" for="inputFirstAndLastName">First and last name *</label>
                            <input class="form-control" id="inputFirstAndLastName" type="text" placeholder="Enter your first and last name" value=@application.FullName>
                        </div>
                    </div>
                    <div class="row gx-3 mb-3">
                        <div class="col-md-12">
                            <label class="small mb-1" for="inputEmail">Email *</label>
                            <input class="form-control" id="inputEmail" type="text" placeholder="Enter your email address" value=@application.Email>
                        </div>
                    </div>
                    <div class="row gx-3 mb-3">
                        <div class="col-md-12">
                            <label asp-for="@application.AttachedResume" class="small mb-1" for="attachedResume-input">Upload CV (.pdf)</label>
                            <input asp-for="@application.AttachedResume" name="Update.AttachedResume" id="attachedResume-input" type="file" accept="application/pdf" style="display:none">

                            <div class="card mb-4 mb-xl-0">
                                <div class="card-body d-flex flex-column align-items-center">
                                    @if (!string.IsNullOrEmpty(offerDescription.ResumeName))
                                    {
                                        <a role="button" target="_blank" rel="noopener noreferrer" href=@application.AttachedResumeUrl>
                                            <i class="bi bi-file-earmark-check-fill text-info" style="font-size: 5rem;"></i>
                                        </a>
                                        <b>@offerDescription.ResumeName</b>
                                        <div>
                                            <input type="hidden" name="id" value="Display.AttachedResumeUrl" />
                                            <button type="button" class="small font-italic text-muted mt-auto border-0 bg-transparent"
                                                onclick="location.href='@Url.Action("DeleteResume", "OfferContent")'">
                                                <i class="bi bi-x-lg text-primary" style="font-size: 1.5rem;"></i>
                                            </button>
                                        </div>
                                    }
                                    else
                                    {
                                        <i class="bi bi-file-earmark-arrow-up" style="font-size: 5rem;"></i>
                                        <div class="d-flex justify-content-between small font-italic text-muted mb-2">
                                            <label asp-for="@application.AttachedResume" class="custom-file-label" for="attachedResume-input">
                                                Drag and Drop or <button class="btn btn-primary btn-sm" type="button" id="attachedResume-button">Browse</button>
                                            </label>
                                        </div>
                                        <div class="small font-italic text-muted mb-2">PDF no larger than 5 MB</div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row gx-3 mb-3">
                        <div class="col-md-12">
                            <label class="small mb-1" for="inputDescription">Introduce yourself (linkedin/github links)</label>
                            <textarea rows="3" class="form-control" id="inputDescription" type="text" placeholder="Type something about you" 
                            value="@application.AdditionalInformation"></textarea>
                        </div>
                    </div>
                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-block px-5">Apply</button>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="d-flex flex-row justify-content-center">
            <button type="submit" class="btn btn-primary w-75 px-5">Apply</button>
        </div>
    }
</div>
